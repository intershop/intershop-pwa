{
  "*.ts": [
    "npx tslint --project tsconfig.json --fix",
    "npx prettier --loglevel warn --write",
    "npx jest --findRelatedTests",
    "git add"
  ],
  "*.{js,json}": [
    "npx prettier --loglevel warn --write",
    "git add"
  ],
  "*.html": [
    "npx prettier --loglevel warn --write --parser angular",
    "git add"
  ]
}
