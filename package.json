{
  "name": "intershop-pwa",
  "description": "Intershop Progressive Web App",
  "version": "0.11.0",
  "license": "Intershop Standard Software End User License Agreement Intershop 7",
  "keywords": [
    "intershop"
  ],
  "engines": {
    "node": ">=10.13.0",
    "npm": "~6.4.1"
  },
  "private": true,
  "scripts": {
    "ng": "npx ng",
    "test": "jest --ci",
    "test:watch": "jest --watch",
    "e2e": "node open-cypress",
    "lint": "npx ng lint",
    "stylelint": "stylelint \"src/**/*.scss\" --fix",
    "format": "npx prettier --loglevel warn --write \"**/*.*\"",
    "check": "npm run lint -- --fix --format stylish && npm run format && npm run stylelint && npx tsc --project src/tsconfig.spec.json && npm run build && npm run test",
    "changelog": "npx -p conventional-changelog-cli conventional-changelog -t RELEASE_ -n intershop-changelog.js -i CHANGELOG.md -s",
    "3rd-party-licenses": "npm ci && npx license-checker --csv --out 3rd-party-licenses.txt --customPath templates/3rd-party-licenses_format.json",
    "3rd-party-licenses:summary": "npx license-checker --summary",
    "docs": "npx @compodoc/compodoc -p src/tsconfig.app.json -d docs/compodoc -y docs/theme --hideGenerator",
    "docs:serve": "npm run docs -- -s",
    "docs:watch": "npm run docs -- -s -w",
    "build:client-and-server-bundles": "npx ng build --prod --progress=false && npx ng run intershop-pwa:server:production --progress=false",
    "webpack:server": "webpack --config webpack.server.config.js --progress=false --colors",
    "serve": "cd dist && node server",
    "build:watch": "npx ng build --aot --watch",
    "build": "npm run build:client-and-server-bundles && npm run webpack:server",
    "start": "npm run build && npm run serve"
  },
  "dependencies": {
    "@angular-devkit/build-angular": "^0.11.4",
    "@angular-devkit/core": "^7.1.4",
    "@angular-devkit/schematics": "^7.1.4",
    "@angular/animations": "^7.1.4",
    "@angular/cli": "~7.1.4",
    "@angular/common": "^7.1.4",
    "@angular/compiler": "^7.1.4",
    "@angular/compiler-cli": "^7.1.4",
    "@angular/core": "^7.1.4",
    "@angular/forms": "^7.1.4",
    "@angular/http": "^7.1.4",
    "@angular/language-service": "^7.1.4",
    "@angular/platform-browser": "^7.1.4",
    "@angular/platform-browser-dynamic": "^7.1.4",
    "@angular/platform-server": "^7.1.4",
    "@angular/router": "^7.1.4",
    "@angular/service-worker": "^7.1.4",
    "@fortawesome/angular-fontawesome": "0.3.0",
    "@fortawesome/fontawesome-svg-core": "1.2.12",
    "@fortawesome/free-solid-svg-icons": "5.6.3",
    "@ng-bootstrap/ng-bootstrap": "^4.0.1",
    "@ngrx/effects": "^7.0.0",
    "@ngrx/entity": "^7.0.0",
    "@ngrx/store": "^7.0.0",
    "@ngrx/store-devtools": "^7.0.0",
    "@nguniversal/express-engine": "^7.0.2",
    "@nguniversal/module-map-ngfactory-loader": "^7.0.2",
    "@ngx-formly/core": "^4.8.2",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@ngx-utils/cookies": "^3.0.2",
    "@schematics/angular": "^7.1.4",
    "@sentry/browser": "5.2.1",
    "@types/lodash-es": "^4.17.1",
    "@types/node": "^10.12.18",
    "@wishtack/reactive-component-loader": "^1.0.0",
    "angular2-cookie-law": "^6.2.0",
    "angular2-uuid": "^1.1.1",
    "angulartics2": "^7.4.0",
    "b64u": "^2.0.0",
    "bootstrap": "^4.2.1",
    "conventional-changelog-cli": "^2.0.11",
    "core-js": "^2.6.1",
    "express": "^4.16.4",
    "lodash-es": "^4.17.11",
    "ng-recaptcha": "^4.2.1",
    "ng2-validation": "^4.2.0",
    "ngrx-router": "^2.0.1",
    "ngrx-store-localstorage": "^5.1.1",
    "ngx-infinite-scroll": "^7.0.1",
    "rxjs": "^6.3.3",
    "ts-loader": "5.3.2",
    "typescript": "~3.1.6",
    "webpack-cli": "^3.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^4.0.2",
    "codelyzer": "^4.5.0",
    "cpy-cli": "^2.0.0",
    "cypress": "^3.1.5",
    "cypress-failed-log": "^2.4.1",
    "husky": "^1.3.1",
    "intershop-schematics": "file:schematics/src",
    "intershop-tslint-rules": "file:tslint-rules",
    "istanbul-api": "2.0.6",
    "istanbul-reports": "2.0.1",
    "jasmine-data-provider": "^2.2.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "jest-html-reporter": "^2.4.2",
    "jest-junit": "^5.2.0",
    "jest-marbles": "^2.2.0",
    "jest-preset-angular": "^6.0.2",
    "lint-staged": "^8.1.0",
    "ng-mocks": "^7.7.0",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "rxjs-compat": "^6.3.3",
    "rxjs-tslint-rules": "^4.14.3",
    "stylelint": "^9.9.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.4",
    "ts-mockito": "2.3.1",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.3",
    "tslint": "~5.12.0",
    "tslint-clean-code": "^0.2.7",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.2.12",
    "tslint-jasmine-rules": "1.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*": [
        "npx prettier --loglevel warn --write",
        "git add"
      ],
      "*.ts": [
        "npx tslint --project tsconfig.json --fix --force",
        "npx tslint --project tsconfig.json --fix",
        "npx jest --findRelatedTests --bail",
        "git add"
      ]
    },
    "concurrent": false
  }
}
