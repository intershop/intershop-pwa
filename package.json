{
  "name": "intershop-pwa",
  "description": "Intershop Progressive Web App",
  "version": "1.0.0",
  "license": "Intershop Standard Software End User License Agreement Intershop 7",
  "keywords": [
    "intershop"
  ],
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8"
  },
  "private": true,
  "scripts": {
    "init-development-environment": "node scripts/init-development-environment",
    "postinstall": "postinstall && npm-run-all --silent build:tslint-rules build:schematics synchronize-lazy-components init-development-environment ngcc",
    "build:tslint-rules": "cd tslint-rules && npm run build",
    "build:schematics": "cd schematics && npm run build",
    "ng": "ng",
    "ngcc": "ngcc --first-only",
    "test": "jest --ci",
    "test:watch": "jest --watch -i",
    "e2e": "cd e2e && npm install && node open-cypress",
    "lint": "ng lint",
    "format": "node docs/check-sentence-newline && stylelint \"**/*.{css,scss}\" --fix && prettier --loglevel warn --write \"**/*.*\"",
    "compile": "tsc --project tsconfig.all.json",
    "dead-code": "npx ts-node scripts/find-dead-code.ts",
    "clean-localizations": "node scripts/clean-up-localizations",
    "spell-check": "cspell lint --no-summary --no-progress \"{src,projects,docs}/**/*.{html,ts,md}\"",
    "spell-check-localizations": "cspell lint --no-summary --no-progress \"src/assets/i18n/{de_DE,en_US,fr_FR}.json\"",
    "clean": "git clean -xdf -e \"*environment.local.ts\" -e \"*environment.development.ts\" -e \"*node_modules\"",
    "postclean": "npm ci",
    "check": "npm-run-all \"lint -- --fix\" format compile build:multi test dead-code clean-localizations",
    "clean-check": "npm-run-all clean check",
    "changelog": "npx -p conventional-changelog-cli conventional-changelog -n intershop-changelog.js -i CHANGELOG.md -s",
    "3rd-party-licenses": "npm ci && npx license-checker --csv --out 3rd-party-licenses.txt --customPath templates/3rd-party-licenses_format.json",
    "3rd-party-licenses:summary": "npx license-checker --summary",
    "docs": "npx markserv -a 0.0.0.0 docs/README.md",
    "compodoc": "npx compodoc -p tsconfig.doc.json -d docs/compodoc -y docs/theme --hideGenerator",
    "compodoc:serve": "npm run compodoc -- -s -w",
    "synchronize-lazy-components": "ng g lazy-components",
    "build:watch": "npm run build client -- --watch",
    "build": "node scripts/build-pwa",
    "build:multi": "node scripts/build-multi-pwa",
    "analyze": "npm run build client -- --stats-json && npx webpack-bundle-analyzer --host 0.0.0.0 dist/browser/stats.json dist/browser",
    "serve": "node dist/server/main.js",
    "start": "npm-run-all build serve",
    "start:ssr-dev": "ng run intershop-pwa:serve-ssr",
    "xliff": "node scripts/convert-to-xliff.js"
  },
  "dependencies": {
    "@angular/animations": "~12.1.4",
    "@angular/cdk": "^12.1.4",
    "@angular/common": "~12.1.4",
    "@angular/compiler": "~12.1.4",
    "@angular/core": "~12.1.4",
    "@angular/forms": "~12.1.4",
    "@angular/localize": "^12.1.4",
    "@angular/platform-browser": "~12.1.4",
    "@angular/platform-browser-dynamic": "~12.1.4",
    "@angular/platform-server": "~12.1.4",
    "@angular/router": "~12.1.4",
    "@angular/service-worker": "~12.1.4",
    "@fortawesome/angular-fontawesome": "^0.9.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@ng-bootstrap/ng-bootstrap": "^10.0.0",
    "@ngrx/effects": "^12.3.0",
    "@ngrx/entity": "^12.3.0",
    "@ngrx/router-store": "^12.3.0",
    "@ngrx/store": "^12.3.0",
    "@ngrx/store-devtools": "^12.3.0",
    "@nguniversal/express-engine": "^12.1.0",
    "@ngx-formly/core": "^5.10.22",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "@rx-angular/state": "^1.4.3",
    "@sentry/browser": "^6.10.0",
    "@trademe/ng-defer-load": "^8.2.1",
    "angular-oauth2-oidc": "^12.0.1",
    "angular2-uuid": "^1.1.1",
    "angulartics2": "^10.0.0",
    "b64u": "^3.0.0",
    "bootstrap": "^4.6.0",
    "core-js": "^3.15.2",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "express-robots-txt": "0.5.0",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "ng-recaptcha": "^8.0.0",
    "ngx-infinite-scroll": "^10.0.1",
    "ngx-toastr": "^14.0.0",
    "rxjs": "~6.6.7",
    "swiper": "^6.8.0",
    "tslib": "^2.3.0",
    "typeface-roboto": "1.1.13",
    "typeface-roboto-condensed": "1.1.13",
    "url-polyfill": "^1.1.12",
    "xliff": "^5.6.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^12.1.0",
    "@angular-devkit/build-angular": "^12.1.4",
    "@angular/cli": "^12.1.4",
    "@angular/compiler-cli": "~12.1.4",
    "@angular/language-service": "~12.1.4",
    "@commitlint/cli": "^13.1.0",
    "@compodoc/compodoc": "1.1.13",
    "@cspell/dict-de-de": "^1.1.32",
    "@cspell/dict-fr-fr": "^1.2.21",
    "@nguniversal/builders": "^12.1.0",
    "@phenomnomnominal/tsquery": "^4.1.1",
    "@schematics/angular": "^12.1.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^14.17.6",
    "@types/webpack": "^5.28.0",
    "codelyzer": "^6.0.2",
    "comment-json": "^4.1.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "conventional-changelog-cli": "2.1.1",
    "cspell": "^5.6.6",
    "cz-customizable": "^6.3.0",
    "husky": "^4.3.8",
    "intershop-schematics": "file:schematics/src",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "jest-marbles": "^2.5.1",
    "jest-preset-angular": "^9.0.5",
    "lint-staged": "^11.1.1",
    "ng-mocks": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "postinstall": "^0.7.0",
    "prettier": "^2.3.2",
    "prom-client": "^13.1.0",
    "purgecss-webpack-plugin": "^4.0.3",
    "rxjs-tslint-rules": "^4.34.8",
    "sort-json": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.20.1",
    "treeify": "^1.1.0",
    "ts-mockito": "2.6.1",
    "ts-morph": "11.0.0",
    "ts-node": "~10.1.0",
    "tslint": "~6.1.3",
    "tslint-clean-code": "^0.2.10",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.13.10",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "~4.3.5",
    "typescript-tslint-plugin": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent false",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "docs/**/*.md": [
      "node docs/check-kb-labels",
      "node docs/check-dead-links fast",
      "node docs/check-documentation-overview",
      "node docs/check-sentence-newline",
      "cspell lint --no-summary --no-progress"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ],
    "*": [
      "prettier --loglevel warn --write"
    ],
    "*.ts": [
      "tslint --project tsconfig.json --fix",
      "jest --ci --bail --findRelatedTests"
    ],
    "src/assets/i18n/*.json": [
      "sort-json --indent-size=2"
    ]
  },
  "commitlint": {
    "extends": [
      "cz"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "active-themes": "default,blue"
  },
  "postinstall": {
    "jest-extended/types": "copy node_modules/@types/jest-extended"
  }
}
