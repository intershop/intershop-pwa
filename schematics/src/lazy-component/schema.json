{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPWAComponent",
  "title": "PWA Lazy Component Options Schema",
  "type": "object",
  "description": "Creates a new lazy component for an existing one in an extension.",
  "properties": {
    "project": {
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "visible": false
    },
    "name": {
      "type": "string",
      "visible": false
    },
    "prefix": {
      "type": "string",
      "visible": false
    },
    "selector": {
      "type": "string",
      "format": "html-selector",
      "visible": false
    },
    "module": {
      "type": "string",
      "alias": "m",
      "visible": false
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path of the component in extension for generating a lazy component.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What component is the base for generating a lazy component?"
    },
    "ci": {
      "type": "boolean",
      "default": false,
      "visible": false
    }
  }
}
