{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPWAContainer",
  "title": "PWA Container Options Schema",
  "type": "object",
  "description": "Creates a new smart component.",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "visible": false
    },
    "tsext": {
      "type": "string",
      "default": "ts",
      "visible": false
    },
    "artifactFolder": {
      "type": "boolean",
      "default": true,
      "visible": false
    },
    "project": {
      "type": "string",
      "$default": {
        "$source": "projectName"
      },
      "visible": false
    },
    "prefix": {
      "type": "string",
      "visible": false
    },
    "styleext": {
      "type": "string",
      "default": "scss",
      "visible": false
    },
    "selector": {
      "type": "string",
      "format": "html-selector",
      "visible": false
    },
    "module": {
      "type": "string",
      "alias": "m",
      "visible": false
    },
    "name": {
      "type": "string",
      "description": "The name of the container.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the container?"
    },
    "styleFile": {
      "description": "When true, generates and includes a style file for the container.",
      "type": "boolean",
      "default": false,
      "alias": "s"
    },
    "flat": {
      "type": "boolean",
      "description": "Flag to indicate if a dir is created.",
      "default": false
    },
    "skipImport": {
      "type": "boolean",
      "description": "When true, does not import this container into the owning NgModule.",
      "default": false
    },
    "referenceSelector": {
      "type": "string",
      "format": "html-selector",
      "description": "The HTML selector to reference in this containers HTML template."
    },
    "export": {
      "type": "boolean",
      "default": false,
      "description": "When true, the declaring NgModule exports this container."
    },
    "entryComponent": {
      "type": "boolean",
      "default": false,
      "description": "When true, the new container is the entry component of the declaring NgModule."
    }
  }
}
