{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPWAComponent",
  "title": "PWA Component Options Schema",
  "type": "object",
  "description": "Creates a new presentational component.",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "visible": false
    },
    "artifactFolder": {
      "type": "boolean",
      "default": false,
      "visible": false
    },
    "project": {
      "type": "string",
      "$default": {
        "$source": "projectName"
      }
    },
    "prefix": {
      "type": "string",
      "visible": false
    },
    "selector": {
      "type": "string",
      "format": "html-selector",
      "visible": false
    },
    "module": {
      "type": "string",
      "alias": "m",
      "visible": false
    },
    "name": {
      "type": "string",
      "description": "The name of the component.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the component?"
    },
    "styleFile": {
      "description": "When true, generates and includes a style file for the component.",
      "type": "boolean",
      "default": false,
      "alias": "s"
    },
    "flat": {
      "type": "boolean",
      "description": "Flag to indicate if a dir is created.",
      "default": false
    },
    "skipImport": {
      "type": "boolean",
      "description": "When true, does not import this component into the owning NgModule.",
      "default": false
    },
    "export": {
      "type": "boolean",
      "default": false,
      "description": "When true, the declaring NgModule exports this component."
    }
  }
}
