{
  "name": "intershop-schematics",
  "version": "0.0.1",
  "description": "Angular CLI schematics for Intershop PWA",
  "repository": {
    "type": "git",
    "url": "https://github.com/intershop/intershop-pwa.git",
    "directory": "schematics"
  },
  "scripts": {
    "prebuild": "npm ci && npm run generate:schemas && npm test",
    "build": "tsc",
    "postbuild": "npx rimraf node_modules",
    "test": "jest --ci -i",
    "generate:schemas": "node scripts/generate-schema-defs.js"
  },
  "keywords": [
    "schematics",
    "intershop"
  ],
  "schematics": "./src/collection.json",
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*spec\\.ts$",
    "testPathIgnorePatterns": [
      "<rootDir>/.*/(files|other-files)",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test.js"
    ]
  },
  "devDependencies": {
    "@angular-devkit/core": "^9.0.0",
    "@angular-devkit/schematics": "^9.0.0",
    "@types/jest": "^25.0.0",
    "jest": "^25.0.0",
    "jest-extended": "^0.11.5",
    "json-schema-to-typescript": "^8.2.0",
    "ts-jest": "^25.0.0",
    "tsutils": "^3.0.0",
    "typescript": "~3.8.3"
  },
  "dependencies": {
    "@phenomnomnominal/tsquery": "^4.0.0",
    "@schematics/angular": "^9.0.0"
  }
}
