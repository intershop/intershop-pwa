{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src/",
    "lib": ["es2017", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "strictFunctionTypes": false,
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "types": ["jest", "jest-extended", "node"],
    // @lint rules
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
    // "noUnusedLocals": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*_spec.ts",
    "src/**/test*.ts",
    "src/*/files/**/*",
    "src/*/other-files/**/*"
  ]
}
